
{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "${title}",
      "size": "Medium",
      "weight": "Bolder",
      "horizontalAlignment": "Center",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${fact}",
      "size": "Small",
      "wrap": true,
      "spacing": "Medium"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "❤ Guardar",
      "verb": "saveFavorite"
    },
    {
      "type": "Action.Execute", 
      "title": "⟳ Actualizar",
      "verb": "refreshFact"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}
